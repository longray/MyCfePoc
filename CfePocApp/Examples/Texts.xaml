<UserControl x:Class="CfePocApp.Examples.Texts"
                xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                xmlns:ignore="http://www.ignore.com"
                mc:Ignorable="d ignore"
                d:DesignHeight="730" d:DesignWidth="430"
                xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"
                xmlns:command="clr-namespace:GalaSoft.MvvmLight.Command;assembly=GalaSoft.MvvmLight.Extras"
                xmlns:mui="clr-namespace:ModernUI.Windows.Controls;assembly=ModernUI"
                DataContext="{Binding Texts, Source={StaticResource Locator}}">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/ModernUI;component/Assets/ModernUI.Light.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel HorizontalAlignment="Stretch">
            <TextBlock Text="文本样式 | Text Styling" Style="{StaticResource Heading2}" />

            <TextBlock Text="农业银行 | Heading1" Style="{StaticResource Heading1}"  />
            <TextBlock Text="工作任务提示 | Heading2" Style="{StaticResource Heading2}" />
            <TextBlock Text="业绩一览 | title" Style="{StaticResource Title}" />
            <TextBlock Text="您今天有2条营销活动提醒！ | Normal" Style="{StaticResource Normal}"/>
            <TextBlock Text="绩效考核业绩 | Bold" Style="{StaticResource Bold}" />
            <TextBlock Text="88.76% ▲ 71.11% ▼ ￥1,234,567,890.00 | small" Style="{StaticResource Small}" />
            <TextBlock Text="支行未持有客户数量占比最低值 | SmallBold" Style="{StaticResource SmallBold}" />
            <TextBlock Text="88.76% ▲ 71.11% ▼ ￥1,234,567,890.00 | Fixed" Style="{StaticResource Fixed}"   />

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition Width="120"></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <TextBlock Text="文本框、密码" Style="{StaticResource Heading2}"/>
                <Button Grid.Column="1" Content="切换大小" Command="{Binding Path=ChangeFontSizeCommand}" Margin="5,2" />
            </Grid>

            <Grid DataContext="{Binding  Path=Texts}">
                <Grid.Resources>
                    <Style TargetType="TextBox" BasedOn="{StaticResource {x:Type TextBox}}">
                        <Setter Property="FontSize" Value="{Binding Path = FontSize}"></Setter>
                        <Setter Property="Margin" Value="0,1,5,1"></Setter>
                    </Style>
                    <Style TargetType="PasswordBox" BasedOn="{StaticResource {x:Type PasswordBox}}">
                        <Setter Property="FontSize" Value="{Binding FontSize}"></Setter>
                        <Setter Property="Margin" Value="0,1,5,1"></Setter>
                    </Style>
                    <Style TargetType="Label" BasedOn="{StaticResource {x:Type Label}}">
                        <Setter Property="FontSize" Value="{Binding FontSize}"></Setter>
                        <Setter Property="Margin" Value="5,1,0,1"></Setter>
                        <Setter Property="VerticalAlignment" Value="Center" />
                    </Style>
                </Grid.Resources>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="100"></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                </Grid.RowDefinitions>
                <Label       Grid.Row="0" Grid.Column="0" Content="姓名：" />
                <TextBox     Grid.Row="0" Grid.Column="1" Text="文本框" />
                <Label       Grid.Row="1" Grid.Column="0" Content="自我介绍："/>
                <TextBox     Grid.Row="1" Grid.Column="1" Text="只读的文本框" IsReadOnly="True" />
                <Label       Grid.Row="2" Grid.Column="0" Content="职务："/>
                <TextBox     Grid.Row="2" Grid.Column="1" Text="禁用的文本框" IsEnabled="False" />
                <Label       Grid.Row="3" Grid.Column="0" Content="密码："/>
                <PasswordBox Grid.Row="3" Grid.Column="1" Password="12345" />
                <Label       Grid.Row="4" Grid.Column="0" Content="重复密码："/>
                <PasswordBox Grid.Row="4" Grid.Column="1" Password="12345" />
                <StackPanel  Grid.Row="5" Grid.Column="0" Orientation="Horizontal" HorizontalAlignment="Left">
                    <StackPanel.Resources>
                        <Style TargetType="{x:Type Button}" BasedOn="{StaticResource {x:Type Button}}">
                            <Setter Property="Margin" Value="10,5,0,5" />
                        </Style>
                    </StackPanel.Resources>
                    <Button>重置</Button>
                </StackPanel>
                <StackPanel  Grid.Row="5" Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">
                    <StackPanel.Resources>
                        <Style TargetType="{x:Type Button}" BasedOn="{StaticResource {x:Type Button}}">
                            <Setter Property="Margin" Value="0,5,10,5" />
                        </Style>
                    </StackPanel.Resources>
                    <Button>提交</Button>
                    <Button>取消</Button>
                </StackPanel>
            </Grid>

            <StackPanel>
                <TextBlock Text="弹出式菜单 | 右键菜单" Style="{StaticResource Heading2}" />
                <StackPanel Orientation="Horizontal" >
                    <StackPanel.Resources>
                        <!--有问题，无法使用事件绑定-->
                        <!--<ContextMenu x:Key="PopContextMenu1">
                            <MenuItem Header="A:刷新" />
                            <MenuItem Header="B:复制" Command="{Binding CopyCommand}" />
                            <MenuItem Header="C:禁用" IsEnabled="False" />
                            <MenuItem Header="D:选择" IsChecked="True" IsCheckable="True" />
                            <MenuItem Header="E:禁用，选择" IsChecked="True" IsEnabled="False" />
                            <Separator />
                            <MenuItem Header="高级" >
                                <MenuItem Header="1:刷新" />
                                <Separator />
                                <MenuItem Header="2:刷新" />
                                <Separator />
                                <MenuItem Header="3:再刷新" />
                            </MenuItem>
                        </ContextMenu>-->
                        <Style  TargetType="TextBox" BasedOn="{StaticResource {x:Type TextBox}}">
                            <Setter Property="Margin" Value="10,5"/>
                        </Style>
                        <Style  TargetType="Button" BasedOn="{StaticResource Button}">
                            <Setter Property="Margin" Value="10,5"/>
                        </Style>
                    </StackPanel.Resources>
                    <!--<Button Content="(XAML)菜单" Margin="20,5" Command="{Binding PopMenuCommand1}" CommandParameter="{StaticResource PopContextMenu1}" />-->
                    <TextBox Name="TextBoxForMenu" Text="{Binding Texts.TextForMenu, Mode=TwoWay}" VerticalContentAlignment="Center" ></TextBox>
                    <Button Content="(代码)菜单" Command="{Binding PopMenuCommand2}" CommandParameter="{Binding Text ,ElementName=TextBoxForMenu}" />
                </StackPanel>
            </StackPanel>

            <StackPanel>
                <mui:Calendar Background="White" HorizontalAlignment="Left" Margin="10,5" >
                    <mui:Calendar.BlackoutDates>
                        <mui:CalendarDateRange Start="2014/12/6" End="2014/12/7" />
                    </mui:Calendar.BlackoutDates>
                </mui:Calendar>
            </StackPanel>
        </StackPanel>
    </ScrollViewer>

</UserControl>