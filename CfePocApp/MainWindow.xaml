<Window xmlns:examples="clr-namespace:CfePocApp.Examples" x:Class="CfePocApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:ignore="http://www.ignore.com"
        mc:Ignorable="d ignore"
        Height="800"
        Width="900"
        Title="MVVM Light Application">

    <TabControl>
        <TabItem  Header="按钮、文本">
            <Grid Background="White">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="290" />
                    <ColumnDefinition Width="290" />
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <examples:Buttons Grid.Row="0" Grid.Column="0" />
                <examples:Texts Grid.Row="0" Grid.Column="1" />
                <examples:Others Grid.Row="0" Grid.Column="2" />
            </Grid>
        </TabItem>
        <TabItem Header="表格">
            <Grid Background="White">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="220" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <examples:ModernDataGrid Grid.ColumnSpan="2"></examples:ModernDataGrid>
            </Grid>
        </TabItem>
    </TabControl>

</Window>